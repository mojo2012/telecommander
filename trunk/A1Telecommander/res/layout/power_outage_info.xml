<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent"
	android:id="@+id/HeatingSystemLayout"
	android:orientation="vertical"
	android:layout_gravity="bottom"
	android:gravity="center"
	android:background="@drawable/background">
	<LinearLayout
		android:id="@+id/linearLayout1"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_margin="20px"
		android:gravity="center"
		android:orientation="vertical">
		<TextView
			android:layout_gravity="center"
			android:id="@+id/alarmInfoView"
			android:gravity="center"
			android:layout_width="wrap_content"
			android:typeface="normal"
			android:layout_height="wrap_content"
			android:padding="7px"
			android:textSize="12pt" android:text="Stromausfall am %d, um %t!"/>
		<Button
			android:id="@+id/cancelAlarmButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Hier tippen um Alarm abzustellen!"
			android:drawablePadding="10px" android:drawableTop="@drawable/battery"/>
	</LinearLayout>

</LinearLayout>
